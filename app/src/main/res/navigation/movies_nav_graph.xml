<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movies_nav_graph"
    app:startDestination="@id/moviesListFragment">

    <fragment
        android:id="@+id/moviesListFragment"
        android:name="com.myapp.movieswatchnow.presentation.fragment.MovieListFragment"
        android:label="Movies List"
        tools:layout="@layout/fragment_movies_list" />

    <fragment
        android:id="@+id/moviesSavedFragment"
        android:name="com.myapp.movieswatchnow.presentation.fragment.MovieSavedFragment"
        android:label="Movies Saved List"
        tools:layout="@layout/fragment_movies_list" />

    <fragment
        android:id="@+id/moviesDetailsFragment"
        android:name="com.myapp.movieswatchnow.presentation.fragment.MovieDetailsFragment"
        android:label="Movies Details"
        tools:layout="@layout/fragment_movie_detail">
        <action
            android:id="@+id/action_movieListFragment_to_DetailsFragment"
            app:destination="@id/moviesDetailsFragment"
            />
    </fragment>



</navigation>